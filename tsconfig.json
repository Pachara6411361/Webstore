{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/contacts/page.js",
    "app/about/page.js",
    "app/page.js",
    "app/components/navigation/navbar/Button.js",
    "app/components/navigation/navbar/Dropdown.js",
    "app/components/navigation/navbar/index.js",
    "app/components/navigation/navbar/Logo.js",
    "app/components/Footer.js",
    "app/components/navigation/index.js",
    "app/components/navigation/sidebar/index.js",
    "app/layout.js"
  ],
  "exclude": ["node_modules"]
}
